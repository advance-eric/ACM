@using ACM.Models
@model ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    ViewBag.ShowTitle = false;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h2>Forgotten your password?</h2>
            <p>If you have forgotten your password, enter your email address below to receive instructions on obtaining a new one.</p>
            <div class="form-group">
                @Html.ValidationMessageFor(model => model.Email)
                @Html.BootstrapTextBoxFor(model => model.Email, null )
            </div>
            <div class="form-group">
                @Html.KendoSubmitButton("Reset my password")
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
}

