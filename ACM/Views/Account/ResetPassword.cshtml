@model ACM.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    ViewBag.ShowTitle = false;
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-4"></div>

        <div class="col-md-3">
            <h2>@ViewBag.Title</h2>
            @Html.ValidationSummary(false)
            <div class="form-group" style="padding-top:25px;">
                @Html.LabelFor(model => model.Email)
                @Html.BootstrapTextBoxFor(model => model.Email, null)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.BootstrapPasswordFor(model => model.Password, null)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.BootstrapPasswordFor(model => model.ConfirmPassword, null)
            </div>
            <div class="form-group">
                @Html.KendoSubmitButton("Reset", htmlAttributes: new { style = "width: 150px;" })
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
}
