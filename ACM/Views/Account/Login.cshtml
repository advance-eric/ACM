@using ACM.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    ViewBag.ShowTitle = false;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <img src="~/Content/Images/logo-login.png" style="display: block; float:right; padding-right: 50px; padding-top: 50px;" />
        </div>
        <div class="col-md-3">
            @Html.ValidationSummary(false)
            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.BootstrapTextBoxFor(model => model.Email, null)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.BootstrapPasswordFor(model => model.Password, null)
            </div>
            <div class="form-group">
                @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account")
            </div>
            <div class="form-group">
                @Html.KendoSubmitButton("Login")
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
}

